{
  "name": "scan-eat-mvp",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:api": "npm --workspace @scan-eat/api run start:dev",
    "dev:web": "npm --workspace @scan-eat/web run dev",
    "build": "npm-run-all build:*",
    "build:api": "npm --workspace @scan-eat/api run build",
    "build:web": "npm --workspace @scan-eat/web run build",
    "test": "npm-run-all test:*",
    "test:api": "npm --workspace @scan-eat/api run test",
    "test:e2e": "npm --workspace @scan-eat/api run test:e2e && npm --workspace @scan-eat/web run test:e2e",
    "lint": "npm-run-all lint:*",
    "lint:api": "npm --workspace @scan-eat/api run lint",
    "lint:web": "npm --workspace @scan-eat/web run lint",
    "format": "prettier --write .",
    "db:up": "docker compose up -d postgres",
    "db:down": "docker compose down",
    "prisma:generate": "npm --workspace @scan-eat/api run prisma:generate",
    "prisma:migrate": "npm --workspace @scan-eat/api run prisma:migrate",
    "prisma:seed": "npm --workspace @scan-eat/api run prisma:seed"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "next": "^14.2.35"
  }
}
